<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="12dp">

    <Button
        android:id="@+id/arts_list_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/arts_list_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@drawable/button_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/countries_list_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/countries_list"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@drawable/button_background"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arts_list_button"/>

    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_countries_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@drawable/button_background"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/countries_list_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>